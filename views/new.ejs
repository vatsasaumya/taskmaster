<%- include("partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a new task!!</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/task" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="Description">
				</div>
				<div class="form-group">
					<input class="form-control" type="date" name="deadline" placeholder="deadline">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
				
			</form>
			<a href="/task">Go back</a>
		</div>
			
	</div>
	
</div>
<%- include("partials/footer") %>
