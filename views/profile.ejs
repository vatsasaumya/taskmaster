<!DOCTYPE html>
<html>
<head>
  <title>SmartWork</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <style type="text/css">
  	li{
  		width: 400px;
  	}
  </style>
</head>
<body>

  <nav class="navbar navbar-default" style="position: sticky;">
    <div class="container-fluid">
      <div class="navbar-header">
        <h3 class="navabr-brand">SmartWork</h3>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/task" style="font-size: 18px;">Personal Board</a></li>
          <li><a href="/visit" style="font-size: 18px;">Team Board</a></li>
          <li><a href="/profile" style="font-size: 18px;">My Profile</a></li>
          <li><a href="/api/user/logout" style="font-size: 18px;">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>
<div class="container">
	<ul class="list-group">
		<li class="list-group-item">Logged in as : <%= name %></li>
		<li class="list-group-item">Email ID : <%= email %></li>
	</ul>
	<h4>Your tasks:</h4>
	<ul class="list-group">
	<% tasks.forEach(function(task){ %>
	<li class="list-group-item"><%= task.name %></li>
	<%});%>
	</ul>
	<h4>Your teams:</h4>
	<ul class="list-group">
	<% teams.forEach(function(team){ %>
	<li class="list-group-item"><%= team.name %></li>
	<%});%>
	</ul>
</div>

<%- include("partials/footer") %>
